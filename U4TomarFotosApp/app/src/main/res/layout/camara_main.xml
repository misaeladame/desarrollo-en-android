<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4DEA9"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Indique la calidad con la que se guardarÃ¡ la foto. Debe ser un numero de 0-100. Entre mas grande mayor calidad."
                    android:textColor="#390F6F" />

                <EditText
                    android:id="@+id/edtCalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="end"
                    android:inputType="number"
                    android:text="5" />
            </LinearLayout>

            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7EEEE"
                android:text="1-Tomar foto" />

            <Button
                android:id="@+id/btnGuardarAlmPrivado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7EEEE"
                android:text="2a-Guardar foto (en almacen interno privado)" />

            <Button
                android:id="@+id/btnGuardarAlmCompartido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7EEEE"
                android:text="2b-Guardar foto en /DCIM/Camera" />

            <Button
                android:id="@+id/btnCargarFoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7EEEE"
                android:text="3-Cargar foto en ImageView" />

            <TextView
                android:id="@+id/txtvRutaTmp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ruta temp:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#686868"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtvRutaDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruta destino:"
                android:textColor="#686868"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>